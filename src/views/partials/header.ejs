<!-- ======= Header ======= -->
<header id="header" class="fixed-top header-transparent">
  <div class="container d-flex align-items-center justify-content-between">

      <div class="logo">
          <h1 class="text-light"><a href="/"><span>TTH Company</span></a></h1>
      </div>

      <nav id="navbar" class="navbar">
          <ul>
                <% if(!isDirector && !isManager){ %>
                    <li><a class="nav-link scrollto" href="/task">Công việc</a></li>
                <% } %>
                <% if(!isDirector){ %>
                    <li><a class="nav-link scrollto" href="/absence">Nghỉ phép</a></li>
                <% } %>
              
                <% if(isDirector || isManager){ %>
                    <li class="dropdown">
                        <a href="#">Quản lý
                            <i class="dropdown-icon fas fa-chevron-down"></i>
                            <i class="dropdown-icon-mobile fas fa-chevron-right"></i>
                        </a>
                        <ul><li><a href="/absence/management">Quản lý nghỉ phép</a></li>
                        <% if (isDirector) { %>
                            <li><a href="/users/management">Quản lý nhân viên</a></li>
                        <% } %>
                        <% if (isManager) { %>
                            <li><a href="/task/management">Quản lý công việc</a></li>
                        <% } %>                                      
                        </ul>
                    </li>
                <% } %>
                    <li class="dropdown">
                      <a class="nav-link scrollto account" href="#"> <i class="fas fa-user-circle"></i> &nbsp &nbsp  <%= userInfo.user_name %></a>
                      <ul class="account-dropdown">
                            <% if(!isDirector){ %>
                                <li><a href="/users/currentUserDetail">Thông tin người dùng</a></li>
                            <% } %>
                          <li class="logout-btn"><a href="/utils/logout">Đăng xuất</a></li>
                      </ul>
                    </li>
          </ul>
          <i class="fas fa-bars mobile-nav-toggle"></i>
      </nav>
      <!-- .navbar -->

  </div>
</header>
<!-- End Header -->